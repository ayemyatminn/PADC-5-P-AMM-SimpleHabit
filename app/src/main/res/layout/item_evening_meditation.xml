<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_dark"
    android:layout_marginRight="@dimen/margin_medium">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_evening_meditation"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:cardCornerRadius="@dimen/margin_small"
        app:cardElevation="@dimen/margin_medium">

        <RelativeLayout
            android:id="@+id/rl_eveining_meditiation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_evening_meditation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sm2"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_evening_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/iv_evening_meditation"
                android:src="@drawable/ic_add_white_24dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_evening_meditation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peaceful Evening"
        android:layout_below="@id/cv_evening_meditation"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_2x"/>

    <TextView
        android:id="@+id/tv_evening_meditation_duraion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 mins"
        android:layout_below="@id/tv_evening_meditation_title"
        android:layout_marginTop="@dimen/margin_medium"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular"/>

</RelativeLayout>